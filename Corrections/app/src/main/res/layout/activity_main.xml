<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/black"
    tools:context="com.pocketcloset.stef.test.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/app_name"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="54dp"
        android:textStyle="italic" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:text="@string/enter_wardrobe"
        android:textAlignment="gravity"
        android:gravity="center"
        android:id="@+id/wardrobe_button"
        android:layout_alignParentTop="true"
        android:layout_marginTop="110dp"
        android:background="@drawable/button_outline"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="30dp"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:text="@string/add_item"
        android:id="@+id/item_button"
        android:textAlignment="gravity"
        android:gravity="center"
        android:background="@drawable/button_outline"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textAllCaps="false"
        android:layout_below="@+id/wardrobe_button"
        android:layout_alignStart="@+id/wardrobe_button"
        android:layout_marginTop="60dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:text="@string/saved_outfits"
        android:textAlignment="gravity"
        android:gravity="center"
        android:id="@+id/outfit_button"
        android:background="@drawable/button_outline"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="30dp"
        android:layout_below="@+id/item_button"
        android:layout_alignStart="@+id/item_button"
        android:layout_marginTop="60dp" />
</RelativeLayout>
